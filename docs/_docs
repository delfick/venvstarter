#!/usr/bin/env python3

import pathlib
import runpy

manager = runpy.run_path(pathlib.Path(__file__).parent / ".." / "venvstarter.py")["manager"]

manager.add_requirements_file("{here}", "requirements.txt")
manager.add_local_dep(
    "{here}", "..", name="venvstarter=={version}", version_file=["venvstarter.py"]
)

manager.min_python(3.6).run("sphinx-build")
